<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pan Book - Usługi w twojej okolicy!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/CustomStyle.css" />

    <link rel="icon"
          type="icon"
          href="~/SVGPanBookFavicon.svg">


</head>
<body>
    <header>
        <nav class="navbar-custom navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="margin-bottom:0 !important">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/BrandingImages/PanBookLogoWithNameBlack.svg" style="height:2em" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AddAuction" asp-action="Index">Dodaj ogłoszenie</a>
                        </li>*@
                    </ul>
                    <div>
                        <a class="btn btn-dark" asp-controller="AddAuction" asp-action="Index">Dodaj ogłoszenie</a>

                        @if (!Context.User.Identity.IsAuthenticated)
                        {

                            <a class="btn btn-light" asp-controller="UserRegister">Załóż konto</a>
                            <a class="btn btn-outline-dark" asp-controller="Login">Zaloguj się</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-dark" asp-controller="Signout">Wyloguj się</a>
                        }


                    </div>
                    </div>
                </div>
            </nav>
        </header>
        @*<div class="container">
            <main role="main" class="pb-3">*@
        @RenderBody()
        @*</main>
            </div>*@

        @*<footer class="border-top footer text-muted">
            <div class="container">
                In Development - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
