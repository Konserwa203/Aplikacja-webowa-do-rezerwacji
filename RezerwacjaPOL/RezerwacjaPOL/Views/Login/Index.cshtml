@model RezerwacjaPOL.Models.LoginViewModel

@{
    ViewData["Title"] = "Zaloguj się";
}
<link href="~/css/user_register_style.css" rel="stylesheet" />
<script src="~/js/user_register.js"></script>

<div class="bodyLike jumbotron">
    <div class="box">
        <form asp-action="Index" enctype="multipart/form-data">
            <span class="text-center">Zaloguj się</span>
            <div class="input-container">
                <input asp-for="Email" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-container">
                <input type="password" asp-for="Password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
